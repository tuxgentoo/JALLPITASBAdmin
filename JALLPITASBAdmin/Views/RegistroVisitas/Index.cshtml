                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVisita)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegistroVisitaId">Edit</a> |
